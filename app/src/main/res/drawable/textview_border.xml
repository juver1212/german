<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="0.5dp" android:color="@color/colorBotonCancel" />
            <corners android:radius="5dp" />
            <padding android:left="1dp" android:right="1dp" android:bottom="7dp" android:top="7dp" />
        </shape>
    </item>



    <item android:state_focused="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <item>
                <shape>
                    <!-- set the shadow color here -->
                    <stroke
                        android:width="2dp"
                        android:color="#696969" />

                    <!-- setting the thickness of shadow (positive value will give shadow on that side) -->

                    <padding
                        android:bottom="1.5dp"
                        android:left="1.5dp"
                        android:right="1.5dp"
                        android:top="1.5dp" />

                    <corners android:radius="2dp" />
                </shape>
            </item>

            <!-- Background -->

            <item>
                <shape>
                    <solid android:color="#fff" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>